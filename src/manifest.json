{
  "manifest_version": 3,
  "name": "Linksort",
  "short_name": "Linksort",
  "version": "1.0",
  "description": "Save your links",
  "homepage_url": "https://linksort.com",
  "permissions": [
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://linksort.com/"
  ],
  "icons": {
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "256": "icon-256x256.png",
    "512": "icon-512x512.png"
  },
  "action": {
    "default_popup": "popover.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
